<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.epicodus.gamechest.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp"
        android:textSize="26sp"
        android:text="GAME CHEST"
        android:id="@+id/mainHeaderTextView"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainHeaderTextView"
        android:gravity="center"
        android:textSize="20sp"
        android:hint="Zelda..."
        android:id="@+id/gameSearchEditText"/>

    <Button
        style="@style/CustomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameSearchEditText"
        android:text="SEARCH FOR GAME"
        android:id="@+id/gameSearchButton"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/gameSearchButton"
        android:layout_above="@id/signInButton"
        android:gravity="center_vertical">

        <Button
            style="@style/CustomButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BROWSE GAMES"
            android:id="@+id/gameBrowseButton"/>

        <Button
            style="@style/CustomButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameBrowseButton"
            android:text="BROWSE PLATFORMS"
            android:id="@+id/platformBrowseButton"/>

    </LinearLayout>

    <Button
        style="@style/CustomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="SIGN IN"
        android:id="@+id/signInButton"/>

</RelativeLayout>
