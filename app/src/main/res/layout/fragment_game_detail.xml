<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GameDetailFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/lttp"
            android:scaleType="fitCenter"
            android:layout_marginBottom="10dp"
            android:id="@+id/gameDetailImageView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="The Legend of Zelda: A Link to the Past"
            android:id="@+id/gameDetailHeaderTextView"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11/12/1990"
            android:id="@+id/gameDetailReleaseTextView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ESRB: E"
            android:id="@+id/gameDetailRatingTextView"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Platforms: SNES, WSHP, WiiU, N3DS"
            android:id="@+id/gameDetailPlatformsTextView"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingTop="5dp"
            android:text="The third installment in the Zelda series makes a return to the top-down 2D gameplay found in the first game. This time around, Link needs to travel between the light and dark world in order to set things straight in the kingdom of Hyrule."
            android:id="@+id/gameDetailDeck"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="See more on Giant Bomb.com!"
            android:drawableLeft="@drawable/ic_link_black_24dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:id="@+id/gameDetailUrl"/>

    </LinearLayout>

</FrameLayout>
