<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.epicodus.gamechest.ui.GameBrowseActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game Browse \n Under Construction!"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/gameBrowseHeader"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameBrowseHeader"
        android:dropDownWidth="wrap_content"
        android:prompt="@string/platform_spinner_prompt"
        android:popupBackground="@color/colorPrimary"
        android:gravity="center"
        android:id="@+id/platformSpinner"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/platformSpinner"
        android:id="@+id/gameBrowseRecyclerView"/>

</RelativeLayout>
