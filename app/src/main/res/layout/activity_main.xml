<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.epicodus.gamechest.MainActivity">

    <TextView
        style="@style/customHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:text="@string/main_header"
        android:id="@+id/mainHeaderTextView"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainHeaderTextView"
        android:gravity="center"
        android:textSize="20sp"
        android:hint="@string/game_search_hint"
        android:id="@+id/gameSearchEditText"/>

    <Button
        style="@style/CustomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameSearchEditText"
        android:text="@string/game_search_button"
        android:id="@+id/gameSearchButton"/>

    <!--
    I had to place this about the linear layout so it could reference the sign_in_button
    -->
    <Button
        style="@style/CustomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/sign_in_button"
        android:id="@+id/signInButton"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/gameSearchButton"
        android:layout_above="@id/signInButton"
        android:gravity="center_vertical">

        <Button
            style="@style/CustomButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/game_browse_button"
            android:id="@+id/gameBrowseButton"/>

        <Button
            style="@style/CustomButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/platform_browse_button"
            android:id="@+id/platformBrowseButton"/>

    </LinearLayout>

</RelativeLayout>
